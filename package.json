{
  "name": "nexus-mail",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "main": "dist-electron/main.js",
  "scripts": {
    "dev": "chcp 65001 >nul && vite",
    "build": "vue-tsc -b && vite build && electron-builder",
    "preview": "vite preview"
  },
  "dependencies": {
    "@types/fs-extra": "^11.0.4",
    "dompurify": "^3.3.1",
    "fs-extra": "^11.3.3",
    "imap-simple": "^5.1.0",
    "lucide-vue-next": "^0.563.0",
    "mailparser": "^3.9.3",
    "nodemailer": "^8.0.1",
    "vue": "^3.5.24"
  },
  "devDependencies": {
    "@tailwindcss/vite": "^4.1.18",
    "@types/dompurify": "^3.0.5",
    "@types/imap-simple": "^4.2.10",
    "@types/mailparser": "^3.4.6",
    "@types/node": "^24.10.1",
    "@types/nodemailer": "^7.0.9",
    "@vitejs/plugin-vue": "^6.0.1",
    "@vue/tsconfig": "^0.8.1",
    "autoprefixer": "^10.4.24",
    "electron": "^40.2.1",
    "electron-builder": "^26.7.0",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.18",
    "typescript": "~5.9.3",
    "vite": "npm:rolldown-vite@7.2.5",
    "vite-plugin-electron": "^0.29.0",
    "vite-plugin-electron-renderer": "^0.14.6",
    "vue-tsc": "^3.1.4"
  },
  "overrides": {
    "vite": "npm:rolldown-vite@7.2.5"
  },
  "build": {
    "appId": "com.nexus-mail.app",
    "productName": "灵镜邮",
    "directories": {
      "output": "dist_electron"
    },
    "files": [
      "dist-electron/**/*",
      "dist/**/*"
    ],
    "win": {
      "target": [
        "nsis",
        "zip"
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}